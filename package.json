{
  "name": "vant-weapp-snippets",
  "displayName": "Vant Weapp Snippets",
  "description": "Vant Weapp Snippets for VS Code",
  "version": "0.0.10",
  "engines": {
    "vscode": "^1.61.0"
  },
  "publisher": "Kenzeng",
  "author": {
    "name": "Kenzeng"
  },
  "categories": [
    "Snippets"
  ],
  "icon": "images/logo.png",
  "keywords": [
    "vant",
    "weapp",
    "vue",
    "snippets"
  ],
  "galleryBanner": {
    "color": "#549BFF",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:wxml",
    "onLanguage:json",
    "onLanguage:javascript",
    "onLanguage:css",
    "onLanguage:wxss"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "wxml",
        "aliases": [
          "wxml"
        ],
        "extensions": [
          ".wxml"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "wxss",
        "extensions": [
          ".wxss"
        ]
      }
    ],
    "grammars": [
      {
        "language": "wxml",
        "scopeName": "text.html.wxml",
        "path": "./syntaxes/wxml.tmLanguage"
      }
    ],
    "snippets": [
      {
        "language": "wxml",
        "path": "./snippets/vant-wxml.json"
      },
      {
        "language": "html",
        "path": "./snippets/vant-wxml.json"
      },
      {
        "language": "json",
        "path": "./snippets/vant-json.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/vant-js.json"
      },
      {
        "language": "css",
        "path": "./snippets/vant-wxss.json"
      },
      {
        "language": "wxss",
        "path": "./snippets/vant-wxss.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js",
    "gen": "node ./tools/gen",
    "build": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.61.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "typescript": "^4.4.3",
    "@vscode/test-electron": "^1.6.2"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sannyzeng/vant-weapp-snippets/issues",
    "email": "sannyzeng@qq.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sannyzeng/vant-weapp-snippets"
  }
}
