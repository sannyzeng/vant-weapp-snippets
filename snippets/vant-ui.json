{
  "Basic: Layout van-row": {
    "prefix": "vanrow",
    "body": [
      "<van-row>",
      "\t<van-col :span=\"${1:12}\">${3}</van-col>",
      "\t<van-col :span=\"${2:12}\">${4}</van-col>",
      "</van-row>",
      "${5}"
    ],
    "description": "Vant UI <van-row> with <van-col>"
  },

  "Basic: Layout van-col": {
    "prefix": "vancol",
    "body": ["<van-col :span=\"${1}\">${2}</van-col>", "${3}"],
    "description": "Vant UI <van-col>"
  },

  "Basic: Layout van-row-flex": {
    "prefix": "vanflex",
    "body": [
      "<van-row type=\"flex\" justify=\"${1|start,center,end,space-between,space-around|}\" >",
      "\t<van-col :span=\"${2:8}\">${5}</van-col>",
      "\t<van-col :span=\"${3:8}\">${6}</van-col>",
      "\t<van-col :span=\"${4:8}\">${7}</van-col>",
      "</van-row>",
      "${7}"
    ],
    "description": "Vant UI <van-row type='flex'>"
  },

  "Basic: van-button": {
    "prefix": "vanb",
    "body": [
      "<van-button type=\"${1|primary,info,warning,danger|}\"  @click=\"$2\"></van-button>",
      "${3}"
    ],
    "description": "Vant UI <van-button>"
  },

  "Basic: van-cell": {
    "prefix": "vancell",
    "body": [
      "<van-cell-group>",
      "\t<van-cell title=\"单元格\" value=\"内容\">${1}</van-cell>",
      "\t<van-cell title=\"单元格\" value=\"内容\" label=\"描述信息\">${2}</van-cell>",
      "</van-cell-group>",
      "${5}"
    ],
    "description": "Vant UI <van-cell>"
  },

  "Basic: van-icon": {
    "prefix": "vanicon",
    "body": ["<van-icon name=\"${1}\" />"],
    "description": "Vant UI <van-icon>"
  },

  "Basic: van-image": {
    "prefix": "vanimage",
    "body": [
      "<van-image src=\"${1}\" type=\"${2|contain,cover,fill,none,sscale-down|}\"  />"
    ],
    "description": "Vant UI <van-image>"
  },

  "Basic: van-popup": {
    "prefix": "vanpopup",
    "body": ["<van-popup v-model=\"${1}\"></van-popup>"],
    "description": "Vant UI <van-popup>"
  }
}
